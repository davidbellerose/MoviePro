@* @model IEnumerable<MoviePro.Models.Database.Movie> *@
@model IEnumerable<MoviePro.Models.Database.MovieCollection>
@using MoviePro.Services.Interfaces
@using MoviePro.Models.Database
@inject IImageService _imageService

@{
    ViewData["Title"] = "My Movies";
    var collection = ViewData["Collections"].ToString();
    var activeFilter = ViewData["Filter"].ToString();

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


@if (Model is null)
{
    <h2>No Movies in Collections.</h2>
}
else
{
    @* filter *@
    @* check pagination anchor at bottom. can apply active class to currently selected filter*@
    <div class="row library-filter">
        <div class="col">
            <ul>
                <span>Filter:</span>
                @foreach (var item in (List<Collection>)ViewData["Collections"])
                {
                    if (item.Id.ToString() == activeFilter)
                    {
                        <li class="active"><a class="nav-link-sub" asp-area="" asp-controller="Movies" asp-action="Library" asp-route-filter="@item.Id">@item.Name</a></li>
                    }
                    else
                    {
                        <li><a class="nav-link-sub" asp-area="" asp-controller="Movies" asp-action="Library" asp-route-filter="@item.Id">@item.Name</a></li>
                    }
                }
            </ul>
        </div>
    </div>
    @* cards *@
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row row-cols-lg-4  gy-3">
        @if (Model is null || Model.Count() == 0)
        {
            <h4 class="mt- ms-5">No Movies in this Collection</h4>
        }
        else
        {

            @foreach (var movie in Model)
            {
                <div class="col">
                    <div class="card myCard">
                        @if (movie.Movie.Poster is null)
                        {
                            <img src="~/images/anika-de-klerk-dWYjy9zIiF8-unsplash.jpg" class="img-fluid" alt="...">
                        }
                        else
                        {
                            <img src="@_imageService.DecodeImage(movie.Movie.Poster, movie.Movie.PosterType)" class="img-fluid" alt="@movie.Movie.Title image" />
                        }
                        <div class="card-body myCard-overlay">
                            <div class="overlay-text">
                                <span class="card-title clampTitle">@movie.Movie.Title</span>
                                <span class="card-text clampOverview">@movie.Movie.Overview</span>
                                <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Movie.MovieId" class="btn bnt-block font-weight-bold myCardButton">Read More...</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
}

<div class="pager">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-center">
            @if (pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-asp-controller="Movies" asp-action="Library" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-asp-controller="Movies" asp-action="Library" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge < pager.EndPage + 1; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-asp-controller="Movies" asp-action="Library" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-asp-controller="Movies" asp-action="Library" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-asp-controller="Movies" asp-action="Library" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>
